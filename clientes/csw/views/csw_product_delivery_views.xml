<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="csw_product_delivery_view_search" model="ir.ui.view">
        <field name="name">csw.product.delivery.search</field>
        <field name="model">csw.product.delivery</field>
        <field name="arch" type="xml">
            <search string="WH Product Delivery Search">
                <field name="partner_id"/>
                <field name="truck_id"/>
                <field name="driver_id"/>
                <field name="storage_type_id"/>
                <field name="dock_id"/>
                <field name="user_id"/>
                <filter name="today" string="Today"
                        domain="[('date','=',time.strftime('%%Y-%%m-%%d'))]"/>
                <separator/>
                <filter string="Draft" name="draft"
                        domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirm"
                        domain="[('state','=','confirm')]"/>
                <separator/>
                <filter domain="[('user_id','=',uid)]" help="My Product Deliveries"/>
                <group expand="0" string="Group By">
                    <filter name="partner_id" string="Customer"
                            context="{'group_by':'partner_id'}"/>
                    <filter name="truck" string="Truck"
                            context="{'group_by':'truck_id'}"/>
                    <filter name="status" string="Status"
                            context="{'group_by':'state'}"/>
                    <separator/>
                    <filter string="Date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="csw_product_delivery_view_form" model="ir.ui.view">
        <field name="name">csw.product.delivery.form</field>
        <field name="model">csw.product.delivery</field>
        <field name="arch" type="xml">
            <form string="WH Product Delivery" create="false">
                <header>
                    <button name="action_confirm" states="draft"
                            string="Confirm" type="object"
                            class="oe_highlight" groups="base.group_user"/>
                    <!--<field name="entry_weight_exists" invisible="1"/>-->
                    <!--<button name="action_entry_weight"-->
                            <!--string="Entry Weight" type="object"-->
                            <!--attrs="{'invisible': ['|', ('state', '!=', 'confirm'), '&amp;', ('state', '=', 'confirm'), ('entry_weight_exists', '=', True)]}"-->
                            <!--class="oe_highlight" groups="base.group_user"/>-->
                    <!--<button name="action_assign_dock" states="confirm"-->
                            <!--string="Assign to Dock" type="object"-->
                            <!--groups="base.group_user"/>-->
                    <!--<field name="exit_weight_exists" invisible="1"/>-->
                    <!--<button name="action_exit_weight"-->
                            <!--string="Exit Weight" type="object"-->
                            <!--attrs="{'invisible': ['|', ('state', '!=', 'product_move'), '&amp;', ('state', '=', 'product_move'), ('exit_weight_exists', '=', True)]}"-->
                            <!--class="oe_highlight" groups="base.group_user"/>-->
                    <!--<button name="action_finish"-->
                            <!--string="Finish" type="object"-->
                            <!--attrs="{'invisible': ['|', ('state', '!=', 'product_move'), '&amp;', ('state', '=', 'product_move'), ('exit_weight_exists', '=', False)]}"-->
                            <!--class="oe_highlight" groups="base.group_user"/>-->
                    <!--<button name="action_cancel" states="draft,confirm"-->
                            <!--string="Cancel" groups="base.group_user"-->
                            <!--type="object"/>-->
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="transport_type"/>
                            <field name="license_number"/>
                            <field name="truck_id"/>
                            <field name="driver_id"/>
                            <field name="trailer_number"/>
                            <!--<field name="weight_entry"/>-->
                            <!--<field name="weight_exit"/>-->
                            <field name="dock_id" string="Dock No."/>
                            <field name="location_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="delivery_number"
                                   string="Customer Delivery No."/>
                            <field name="inspection_number"/>
                            <field name="seals_number"/>
                            <field name="senasa_number"/>
                            <field name="product_market"/>
                            <field name="storage_type_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="line_ids">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="package_id"/>
                                    <field name="customer_pallet_no"/>
                                    <field name="product_qty"/>
                                    <field name="temperature"/>
                                    <field name="avg_temperature"/>
                                    <field name="lot_number"/>
                                    <field name="create_date"/>
                                    <field name="use_date"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="customer_pallet_no"/>
                                        <field name="package_id"/>
                                        <field name="product_qty"/>
                                        <field name="lot_number"/>
                                        <field name="use_date"/>
                                    </group>
                                </form>
                            </field>
                            <group col="4">
                                <field name="total_pallet_qty"/>
                                <field name="user_id"/>
                                <field name="total_product_qty"/>
                            </group>
                        </page>
                        <page string="Observations">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="csw_product_delivery_view_tree" model="ir.ui.view">
        <field name="name">csw.product.delivery.tree</field>
        <field name="model">csw.product.delivery</field>
        <field name="arch" type="xml">
            <tree string="WH Product Deliveries" create="false">
                <field name="name"/>
                <field name="way_bill_id"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="license_number" string="Truck License"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="csw_product_delivery_action" model="ir.actions.act_window">
        <field name="name">WH Product Deliveries</field>
        <field name="res_model">csw.product.delivery</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="csw_product_delivery_view_tree"/>
        <field name="help" type="html">
            <p>
                WH Product Deliveries can be created only from Way Bill records.
            </p>
        </field>
    </record>

    <!--Menu items-->
    <menuitem id="menu_item_csw_product_delivery"
              name="Warehouse Product Deliveries"
              parent="menu_csw_management"
              sequence="2" action="csw_product_delivery_action"/>
</odoo>
