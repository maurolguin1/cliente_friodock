<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="csw_storage_service_view_search" model="ir.ui.view">
        <field name="name">csw.storage.service.search</field>
        <field name="model">csw.storage.service</field>
        <field name="arch" type="xml">
            <search string="CS Service Search">
                <field name="partner_id"/>
                <field name="truck_id"/>
                <field name="storage_type_id"/>
                <field name="user_id"/>
                <field name="service_type_id"/>
                <filter name="today" string="Today"
                        domain="[('date','=',time.strftime('%%Y-%%m-%%d'))]"/>
                <separator/>
                <filter string="Draft" name="draft"
                        domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirm"
                        domain="[('state','=','confirm')]"/>
                <filter domain="[('user_id','=',uid)]" help="My CS Services"/>
                <group expand="0" string="Group By">
                    <filter name="partner_id" string="Customer"
                            context="{'group_by':'partner_id'}"/>
                    <filter name="truck" string="Truck"
                            context="{'group_by':'truck_id'}"/>
                    <filter name="status" string="Status"
                            context="{'group_by':'state'}"/>
                    <separator/>
                    <filter name="service_type" string="Service Type"
                            context="{'group_by':'service_type_id'}"/>
                    <filter string="Date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="csw_storage_service_view_form" model="ir.ui.view">
        <field name="name">csw.storage.service.form</field>
        <field name="model">csw.storage.service</field>
        <field name="arch" type="xml">
            <form string="CS Service">
                <header>
                    <button name="action_confirm" states="draft"
                            string="Confirm" type="object"
                            class="oe_highlight" groups="base.group_user"/>
                    <!--<button name="action_entry_weight"-->
                    <!--string="Entry Weight" type="object"-->
                    <!--attrs="{'invisible': ['|', ('state', '!=', 'confirm'), '&amp;', ('state', '=', 'confirm'), ('entry_weight_exists', '=', True)]}"-->
                    <!--class="oe_highlight" groups="base.group_user"/>-->
                    <!--<button name="action_assign_dock" states="confirm"-->
                    <!--string="Assign to Dock" type="object"-->
                    <!--groups="base.group_user"/>-->
                    <!--<field name="exit_weight_exists" invisible="1"/>-->
                    <!--<button name="action_exit_weight"-->
                    <!--string="Exit Weight" type="object"-->
                    <!--attrs="{'invisible': ['|', ('state', '!=', 'product_move'), '&amp;', ('state', '=', 'product_move'), ('exit_weight_exists', '=', True)]}"-->
                    <!--class="oe_highlight" groups="base.group_user"/>-->
                    <!--<button name="action_finish"-->
                    <!--string="Finish" type="object"-->
                    <!--attrs="{'invisible': ['|', ('state', '!=', 'product_move'), '&amp;', ('state', '=', 'product_move'), ('exit_weight_exists', '=', False)]}"-->
                    <!--class="oe_highlight" groups="base.group_user"/>-->
                    <button name="action_cancel" states="draft,confirm"
                            string="Cancel" groups="base.group_user"
                            type="object"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,start,progress,complete"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"
                                   attrs="{'invisible':[('name','=', '/')]}"
                                   placeholder="CS Service Reference"
                                   nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="truck_id"/>
                            <field name="license_number"/>
                            <field name="origin_document"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="storage_type_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="way_bill_ids" widget="many2many_tags"
                               string="Add Way Bill"/>
                        <field name="product_reception_ids"
                               widget="many2many_tags"
                               string="Add WH Product Reception"/>
                        <field name="product_delivery_ids"
                               widget="many2many_tags"
                               string="Add WH Product Delivery"/>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="line_ids"
                                   options="{'reload_on_button': True}">
                                <tree>
                                    <field name="product_id"
                                           domain="[('store_ok', '=', True), ('owner_id', '=', parent.partner_id)]"/>
                                    <field name="customer_pallet_no"/>
                                    <field name="package_id"/>
                                    <field name="pallet_type_id"/>
                                    <field name="product_qty"/>
                                    <field name="lot_number"/>
                                    <field name="use_date"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"
                                               domain="[('store_ok', '=', True), ('owner_id', '=', parent.partner_id)]"/>
                                        <field name="customer_pallet_no"/>
                                        <field name="package_id"/>
                                        <field name="pallet_type_id"/>
                                        <field name="product_qty"/>
                                        <field name="lot_number"/>
                                        <field name="use_date"/>
                                    </group>
                                </form>
                            </field>
                            <group col="4">
                                <field name="total_pallet_qty"/>
                                <field name="service_type_id"/>
                                <field name="total_product_qty"/>
                                <field name="user_id"/>
                            </group>
                        </page>
                        <page string="Invoicing">
                            <group>
                                <group>
                                    <field name="service_type_id"/>
                                    <field name="invoicing_policy"/>
                                    <field name="price_unit"/>
                                    <field name="service_qty"/>
                                </group>
                                <group>
                                    <field name="date_invoiced"/>
                                    <field name="invoice_id"/>
                                    <field name="date_invoice"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="csw_storage_service_view_tree" model="ir.ui.view">
        <field name="name">csw.storage.service.tree</field>
        <field name="model">csw.storage.service</field>
        <field name="arch" type="xml">
            <tree string="CS Services">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="service_type_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="csw_storage_service_action" model="ir.actions.act_window">
        <field name="name">Cold Storage Services</field>
        <field name="res_model">csw.storage.service</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="csw_storage_service_view_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new Cold Storage Service.
            </p>
        </field>
    </record>

    <!--Menu items-->
    <menuitem id="menu_item_csw_storage_service"
              name="Cold Storage Services"
              parent="menu_csw_management"
              sequence="3" action="csw_storage_service_action"/>
</odoo>
